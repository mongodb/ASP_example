{
  "name": "mongo_to_mongo",
  "pipeline": [
    {
      "$source": {
        "connectionName": "sample_stream_solar",
        "db": "quickstart",
        "coll": "solar_rollup"
      }
    },
    {
      "$addFields": {
        "archived": true
      }
    },
    {
      "$merge": {
        "into": {
          "connectionName": "sample_stream_solar",
          "db": "quickstart",
          "coll": "solar_archive"
        },
        "on": "_id",
        "whenMatched": "replace",
        "whenNotMatched": "insert"
      }
    }
  ]
}
